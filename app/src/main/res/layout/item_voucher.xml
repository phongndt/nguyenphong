<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/define_dimen_10"
    android:layout_marginBottom="@dimen/define_dimen_10"
    app:cardCornerRadius="@dimen/define_dimen_6"
    android:layout_marginTop="50dp">


    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/define_dimen_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/define_dimen_10"
            android:layout_marginEnd="@dimen/define_dimen_5"
            android:layout_toStartOf="@+id/layout_button"
            android:orientation="vertical">

            <!-- Tên voucher -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên voucher"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <!-- Ngày bắt đầu -->
            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:text="Bắt đầu: 01/01/2025"
                android:textColor="@color/xam"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="italic" />

            <!-- Ngày kết thúc -->
            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kết thúc: 05/01/2025"
                android:textColor="@color/xam"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Nút sửa và xoá -->
        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/define_dimen_5"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:padding="@dimen/define_dimen_5"
                android:src="@drawable/ic_delete" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
